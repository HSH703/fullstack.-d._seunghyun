<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thejoeun703.dao.UserInfoDao">
	
	<insert id="insert" parameterType="com.thejoeun703.dto.UserInfoDto">
		insert into userinfo (no, email, age) 
		values(userinfo_seq.nextval, #{email}, #{age})
	</insert>
	
	<select  resultType="com.thejoeun703.dto.UserInfoDto"  id="selectAll">
		select * from userinfo order by no desc
	</select>
	
	<select resultType="com.thejoeun703.dto.UserInfoDto"  id="select" parameterType="int">
		select * from userinfo where no=#{no}
	</select>
	
	<update  id="update" parameterType="UserInfoDto">
		update userinfo 
		set email=#{email}, age=#{age}  where no =#{no} 
	</update>
	
	<delete id="delete" parameterType="int">
		delete from userinfo   where  no=#{no}
	</delete>
</mapper>